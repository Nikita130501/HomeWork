@model StrAgent.Models.User

@{
    ViewData["Title"] = "CreateUser";
    Layout = "_LayoutAdmin";
}

<h1>Добавить пользователя</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUser" style="max-width: 400px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger input-ideal"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger input-ideal"></span>
            </div>
            <div class="form-group">
                <label>Role</label>
                <select asp-for="Discriminator" class="form-control input-ideal" asp-items="ViewBag.Roles">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary stock-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UsersList">Назад</a>
</div>

