@model StrAgent.Models.User

@{
    ViewData["Title"] = "Изменение пользователя";
    Layout = "_LayoutAdmin";
}

<h1>Изменение пользовательских данных</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser" method="post" style="max-width: 400px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control input-ideal" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control input-ideal" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Role</label>
                <select asp-for="Discriminator" class="form-control input-ideal">
                    @foreach (var id in ViewBag.Roles.Items)
                    {
                        <option value="@id">@id</option>
                    }
                </select>
                <span asp-validation-for="Discriminator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary stock-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UsersList">Назад</a>
</div>

