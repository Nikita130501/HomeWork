@model IEnumerable<StrAgent.Models.Dogovor>

@{
    ViewData["Title"] = "DogovorList";
    Layout = "_LayoutPolicyholder";
}

<h1>Список договоров</h1>

<p>
    <a asp-action="CreateDogovor">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Идентификатор
            </th>
            <th>
                Статус
            </th>
            <th>
                Агент
            </th>
            <th>
                Тариф
            </th>
            <th>
                Дата
            </th>
            <th>
                Описание
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Agent.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarif.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Described)
            </td>
            @if (item.Status == "Accepted")
            {
                <td>
                    <a asp-action="DogovorDetails" asp-route-id="@item.Id">Подробнее</a>
                </td>
            }
            else
            {
                <td>
                    <a asp-action="DogovorDetails" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-action="DeleteDogovor" asp-route-id="@item.Id">Удалить</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
