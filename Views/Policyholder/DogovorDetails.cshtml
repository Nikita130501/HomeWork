@model StrAgent.Models.Dogovor

@{
    ViewData["Title"] = "DogovorDetails";
    Layout = "_LayoutPolicyholder";
}

<h1>Договор  #@Html.DisplayFor(model => model.Id)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Агент
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.Login)
        </dd>
        <dt class="col-sm-2">
            Тариф
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarif.Name)
        </dd>
        <dt class="col-sm-2">
            Дата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Described)
        </dd>
    </dl>
</div>
@if (Model.Status != "Accepted")
{
    <div>
        <a asp-action="DogovorList">Назад</a>
    </div>
}
else
{
    <div>
        <a asp-action="DogovorList">Назад</a>
    </div>
}
